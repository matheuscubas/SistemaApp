{
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=.\\SQLExpress;Database=SistemaApp;TrustServerCertificate=True;Integrated Security = True;"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console" ], //"Serilog.Sinks.File", 
    "MinimumLevel": {
      //Configuração necessária para definir quais os niveis de logs irão aparecer
      //Ex: Logs Default só devem aparecer se forem de Information ou maior.
      //Já os Logs da Microsof e System ´so devem aparecer se forem Warnings ou maior.
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "System": "Information"
      }
    },
    "Enrich": [
      //Configuração necessária para Adicionar mais informações aos logs
      "FromLogContext",
      "WithMachineName",
      "WithProcessId",
      "WithThreadId"
    ],
    "WriteTo": [
      {
        //Configuração necessária para printar os logs no console
        "Name": "Console"
      }
      //,
      //{
      //  //Configuração necessária para salvar os logs em um arquivo no formato Json **lembrando de coloca o using sinks.file
      //  "Name": "File",
      //  "Args": {
      //    "path": "C:\\logs\\log.json",
      //    "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog"
      ////  }
      //}
    ]
  }
}